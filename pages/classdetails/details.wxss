/* pages/classdetails/details.wxss */
.page-banner{
  position: relative;
  /* background: linear-gradient(to right, rgb(18, 194, 233,0.5), rgb(196, 113, 237,0.5), rgb(246, 79, 89,0.5)); */
  height: 300rpx;
  width: 100%;
}
.page-banner image{
  width: 100%;
  height: 100%;
}
.page-class-details{
  position: absolute;
  top: 200rpx;
  left: 5%;
  height: 150rpx;
  width: 90%;
  background: #fff;
  border-radius: 20rpx;
  box-shadow: 0px 10px 30px -10px rgba(0,0,0,.3);
}
.page-class-details .class-name{
  margin: 20rpx 40rpx;
}

.class-intro-content{
  display: flex;
  justify-content: space-between;
  margin: 0 40rpx;
}
.page-class-details .class-item{
  font-size: 28rpx;
  color: #999;
}

.page-main{
  width: 80%;
  margin: 0 auto;
  margin-top: 100rpx;
}
.page-class-description{
  margin-bottom: 20rpx;
}
.page-class-description-item{
  color: #999;
  font-size: 28rpx;
  display: -webkit-box;
  text-overflow: ellipsis;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  margin-bottom: 40rpx;
}

.page-class-node-item{
  height: 60rpx;
  color: #999;
}
.page-class-node-item navigator{
  border-bottom: 1px solid #eee;
}