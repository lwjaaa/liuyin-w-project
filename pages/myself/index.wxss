/* pages/myself/index.wxss */
.page-container{

}

.sz-sm{
  font-size: 20rpx;
  text-align: center;
  color: #999;
}

.page-login{
  position: relative;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: 400rpx;
  width: 100%;
  background: rgba(0,0,1,.8);
}
.page-login-bg{
  position: absolute;
  width: 100%;
  height: 100%;
  opacity: 0.3;
}
.page-login .page-login-logo image{
  height: 120rpx;
  width: 120rpx;
  background: linear-gradient(to right, rgb(18, 194, 233), rgb(196, 113, 237), rgb(246, 79, 89));
  border-radius:50%; 
  margin-bottom: 30rpx;
}

.page-login .page-login-name{
  display: inline-block;
  color: #fff;
}
.page-login .page-login-btn{
  background-color: #fff;
  color: #000;
  height: 60rpx;
  font-size: 28rpx;
}

.page-login-Model{
  position: fixed;
  display: flex;
  justify-content: center;
  align-items: center;
  top: 0;
  height: 100%;
  width: 100%;
  background: rgba(0,0,1,.5);
  z-index: 9999;
}

.page-login-Model-main{
  display: flex;
  justify-content: center;
  flex-direction: column;
  align-items: center;
  background-color: #fff;
  width: 80%;
  height: 400rpx;
  border-radius: 20rpx;
  z-index: 99999;
  box-shadow: 0px 10px 30px -10px rgba(0,0,0,.3);
}

.page-login-Model-main form{
  height: 80%;
  width: 85%; 
}

.page-login-Model-main form text{
  position: relative;
  color: #000;
  font-size: 20px;
} 

.page-login-Model-main form text::after{
  position: absolute;
  bottom: 10rpx;
  left: 10rpx;
  content: "";
  width: 60rpx;
  height: 10rpx;
  z-index: -1;
  border-radius: 9999;
  background-color: #ffc952;
}

.page-login-Model .model-input{
  height: 60rpx;
  border: 6rpx solid #ffc952;
  border-radius: 9999px;
  color: #999;
  text-align: center;
  margin: 30rpx 0;
}
.page-login-Model .model-btn{
  border-radius: 9999px;
  color: #fff;
  width: 100%;
  background-color: #ffc952;
}



.page-overview{
  position: relative;
  display: flex;
  justify-content: space-around;
  align-items: center;
  height: 120rpx;
  border-bottom: 1px solid #eee;
}
.page-overview-item{
  position: relative;
  width: 30%;
  text-align: center;
}

.page-overview-item::after{
  position: absolute;
  top: 10rpx;
  right: 0rpx;
  content: '';
  width: 2rpx;
  height: 60rpx;
  background-color: #eee;
}
.page-overview-item:last-child:after{
  content: none;
}